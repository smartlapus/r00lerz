<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.r00lerz.businessRuleGenerator.domain.datamodel.Application" table="APPLICATION">
		
		<!-- id is the IDENTIFIER tag. -->
		<id name="id" column="ID" type="integer" unsaved-value="-1" > 
			<!-- Auto increment -->
			<generator class="increment"></generator>
		</id>
		<property name="brgNaam" column="brg_name" type="string"></property>
		<property name="appNaam" column="app_name" type="string"></property>
	</class>



</hibernate-mapping>